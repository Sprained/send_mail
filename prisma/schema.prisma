datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())
  name String?
  email String @unique
  password String
  phone Int?
  fistAccess Boolean @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  adminLog UserLog[] @relation("adminLog")
  userLog UserLog? @relation("userLog")
  userPassword UserPassword[]

  @@map("users")
}

model Contact {
  id String @id @default(uuid())
  name String?
  email String
  recipient String
  is_subscribed Boolean @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("contacts")
}

model UserLog {
  id String @id @default(uuid())
  adminId String
  userCreated String
  body Json

  admin User @relation("adminLog", fields: [adminId], references: [id])
  user User @relation("userLog", fields: [userCreated], references: [id])

  @@map("user_logs")
}

model UserPassword {
  id String @id @default(uuid())
  password String
  userId String

  user User @relation(fields: [userId], references: [id])
}