{
  "openapi": "3.0.0",
  "info": {
    "title": "Sem Mail",
    "description": "Microservi√ßo para envio de email",
    "contact": {
      "email": "gabriel.almeida.resende@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/v1",
      "description": "Api Dev"
    }
  ],
  "tags": [
    {
      "name": "Login"
    },
    {
      "name": "User"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "summary": "Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "Login Admin": {
                  "value": {
                    "email": "admin@email.com",
                    "password": "adm@123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "Token": {
                    "value": {
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE2MzI5MjA4MDUsImV4cCI6MTYzMjkzNTIwNX0.ShcnY3qdFSep3zlL8Sft8gLRY3Xd61a87o2BbUwgJOY"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity (WebDAV) (RFC 4918)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erros": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "msg": {
                            "type": "string"
                          },
                          "param": {
                            "type": "string"
                          },
                          "location": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "Body error": {
                    "value": {
                      "errors": [
                        {
                            "msg": "Email is required",
                            "param": "email",
                            "location": "body"
                        },
                        {
                            "msg": "Invalid email format",
                            "param": "email",
                            "location": "body"
                        },
                        {
                            "msg": "Password is required",
                            "param": "password",
                            "location": "body"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "security": [{ "Bearer": [] }],
        "tags": [
          "User"
        ],
        "summary": "Create new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "Create New Admin": {
                  "value": {
                    "email": "teste@email.com",
                    "phone": "12345678901",
                    "name": "teste"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "409": {
            "description": "Conflit",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "Conflit email": {
                    "value": {
                      "error": "User already exists"
                    }
                  },
                  "Conflit phone": {
                    "value": {
                      "error": "Phone is already in use"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity (WebDAV) (RFC 4918)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erros": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "msg": {
                            "type": "string"
                          },
                          "param": {
                            "type": "string"
                          },
                          "location": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "Body error": {
                    "value": {
                      "errors": [
                        {
                            "msg": "Name is required",
                            "param": "name",
                            "location": "body"
                        },
                        {
                            "msg": "Email is required",
                            "param": "email",
                            "location": "body"
                        },
                        {
                            "msg": "Invalid email format",
                            "param": "email",
                            "location": "body"
                        },
                        {
                            "msg": "Phone is required",
                            "param": "phone",
                            "location": "body"
                        },
                        {
                            "msg": "Phone size has to be eleven",
                            "param": "phone",
                            "location": "body"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mail/switch": {
      "put": {
        "security": [{ "Bearer": [] }],
        "tags": [
          "Mail"
        ],
        "summary": "Switch type mail",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                   "type": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "AWS": {
                  "value": {
                    "type": "AWS"
                  }
                },
                "NODEMAILER": {
                  "value": {
                    "type": "NODEMAILER"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "422": {
            "description": "Unprocessable Entity (WebDAV) (RFC 4918)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erros": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "msg": {
                            "type": "string"
                          },
                          "param": {
                            "type": "string"
                          },
                          "location": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "Body error": {
                    "value": {
                      "errors": [
                        {
                            "msg": "Type is required",
                            "param": "type",
                            "location": "body"
                        },
                        {
                            "msg": "Type must be NODEMAILER or AWS",
                            "param": "type",
                            "location": "body"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mail/infos": {
      "patch": {
        "security": [{ "Bearer": [] }],
        "tags": [
          "Mail"
        ],
        "summary": "Switch type mail",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "awsAccessKeyId": {
                    "type": "string"
                  },
                  "awsSecretAccessKey": {
                    "type": "string"
                  },
                  "host": {
                    "type": "string"
                  },
                  "port": {
                    "type": "number"
                  },
                  "secure": {
                    "type": "boolean"
                  },
                  "user": {
                    "type": "string"
                  },
                  "pass": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "AWS": {
                  "value": {
                    "awsAccessKeyId": "teste",
                    "awsSecretAccessKey": "teste"
                  }
                },
                "NODEMAILER": {
                  "value": {
                    "host": "teste",
                    "port": 999,
                    "secure": false,
                    "user": "teste",
                    "pass": "teste"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          }
        }
      }
    }
  }
}